<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="@color/black">
        <shape>
            <gradient
                android:startColor="@color/green3"
                android:endColor="@color/green4"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey1" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:color="@color/black">
        <shape>
            <gradient
                android:endColor="@color/orange4"
                android:startColor="@color/orange5"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey2" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:color="@color/black">
        <shape>
            <gradient
                android:endColor="@color/green1"
                android:startColor="@color/transparent"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/grey2" />
            <corners
                android:topLeftRadius="2dp"
                android:bottomLeftRadius="2dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>